{
    "type": "APL",
    "version": "1.0",
    "theme": "dark",
    "import": [
    	{
	      "name": "alexa-layouts",
	      "version": "1.1.0"
	    }
    ],
    "mainTemplate": {
        "parameters": [
            "payload"
        ],
        "items": [
            {
                "type": "Frame",
                "width": "100vw",
                "height": "100vh",
                "backgroundColor": "#5B5B5B",
                "items": [
                    {
                        "type": "Container",
                        "width": "100vw",
                        "height": "100vh",
                        "justifyContent": "spaceAround",
                        "items": [
                            {
                                "type": "Container",
                                "width": "100vw",
                                "height": "10vh",
                                "direction": "row",
                                "paddingLeft": "92vw",
                                "items": [
                                    {
                                    	"type": "AlexaButton",
									    "buttonText": "<",
									    "width": "6vw",
                                        "height": "9vh",
									    "primaryAction": {
									    	"type": "SendEvent",
									    	"componentId": "rankComponent",
									    	"arguments": [
									    		"MenuIntent"
									    	]
									    }
                                    }
                                ]
                            },
                            {
                                "type": "Container",
                                "width": "100vw",
                                "height": "80vh",
                                "items": [
                                    {
                                        "type": "Text",
                                        "text": "${payload.rankData.text}",
                                        "width": "100vw",
                                        "fontWeight": "500",
                                        "fontSize": "14vh",
                                        "top": "1vh",
                                        "color": "white",
                                        "textAlign": "center"
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}